% usage: \putimage[optional caption]{image path}
\newcommand{\putimage}[2][] {
	\begin{figure}[H]
		\center
		\includegraphics[width=0.6\textwidth]{#2}
		\caption*{#1}
	\end{figure}
}
\RequirePackage[fencedCode]{markdown}
	\markdownSetup {
		rendererPrototypes = {
			image = {
			\putimage[#1]{#2}
		}
	}
}

